# =============================================================================
# InnoLiber Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# Options: development, staging, production

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_DB=innoliber
POSTGRES_USER=innoliber
POSTGRES_PASSWORD=innoliber_dev_password
POSTGRES_PORT=5432
# Production: Use strong password and consider external database

# -----------------------------------------------------------------------------
# Redis Cache & Message Broker
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Production: Set a strong password for Redis

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
BACKEND_PORT=8000
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
# Production: Set to your actual API URL (e.g., https://api.innoliber.com)

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Production: Generate a secure random key:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost
# Production: Set to your actual frontend URL (e.g., https://innoliber.com)

# -----------------------------------------------------------------------------
# DeepSeek API (LLM Service)
# -----------------------------------------------------------------------------
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# Get your API key from: https://platform.deepseek.com/

# -----------------------------------------------------------------------------
# pgAdmin (Database Management Tool)
# -----------------------------------------------------------------------------
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@innoliber.com
PGADMIN_DEFAULT_PASSWORD=admin
# Production: Use strong password or disable pgAdmin

# -----------------------------------------------------------------------------
# Celery (Background Tasks)
# -----------------------------------------------------------------------------
# Celery will use Redis as broker (configured automatically)

# -----------------------------------------------------------------------------
# Email (Optional - for notifications)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@innoliber.com

# -----------------------------------------------------------------------------
# AWS S3 (Optional - for file storage)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET_NAME=innoliber-uploads
# AWS_S3_REGION=us-west-2

# -----------------------------------------------------------------------------
# Sentry (Optional - for error tracking)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Production Optimizations
# -----------------------------------------------------------------------------
# WORKERS=4  # Number of Uvicorn workers (production)
# CELERY_CONCURRENCY=4  # Number of Celery worker processes
